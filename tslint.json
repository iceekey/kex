{
  "rules": {
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "private-static-field",
          "private-instance-field",
          "public-constructor",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ]
  },
  "triple-equals": true,
  "max-classes-per-file": [true, 1],
  "prefer-conditional-expression": true,
  "import-spacing": true,
  "comment-format": [
    true,
    "check-space"
  ]
}
